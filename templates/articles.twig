				</div>

				<div class="footer_carte flex space-a">
					<a href="index.php?page=article&id={{ article.id }}">détails</a>
					<a href="index.php?page=article&action=edit&id={{ article.id }}">modifier</a>
					<a href="index.php?page=article&action=delete&id={{ article.id }}">supprimer</a>
				</div>
			</article>
	{% endfor %}
