{% extends 'base.twig' %}

{% block page %}
<main class="flex space-b wrap">
	{% for article in articles %}
			<article class="flex column space-b carte">                
				<div class="header_carte flex center-verti space-b">                     
					<h2>{{ article.titre }}</h2>
					<p>{{ article.date }}</p>
				</div>

